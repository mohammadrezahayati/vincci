{
  "compilerOptions": {
    "module": "ESNext", // Use ES Modules (ESM)
    "moduleResolution": "node", // Enable Node.js module resolution strategy
    "target": "ES6", // Compile to ES6 or later
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "skipLibCheck": true, // Skips type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensures consistent casing of filenames
    "outDir": "./dist", // Output compiled files to dist directory
    "declaration": true, // Generates declaration (.d.ts) files
    "sourceMap": true // Generates source maps
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
